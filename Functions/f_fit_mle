# Load negative log-likelihood function
source(here("Functions", "f_nll"))

# Define MLE fitting function
f_fit_mle <- function(y) {
    # Initial parameter estimates
    mu_0 <- mean(y)
    sig_0 <- sd(y)
    theta_0 <- c(mu_0, sig_0)
    
    # Optimize negative log-likelihood
    opt <- optim(par = theta_0, fn = f_nll, x = y, method = "L-BFGS-B", lower = c(-Inf, 1e-5))
    opt$par
}
